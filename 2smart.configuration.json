{
    "title": "ESPHome Bridge",
    "type": "esphome-bridge",
    "registry": "2smartdev/2smart-standalone-esphome-bridge",
    "configuration": {
        "fields": [
            {
                "name": "DEVICE_NAME",
                "type": "string",
                "label": "Device name",
                "default": "ESPHome Bridge",
                "validation": [
                    "string"
                ]
            },
            {
                "name": "HOME_ASSISTANT_MQTT_LOCAL_PORT_BINDING",
                "type": "exposed-port",
                "exposed_port_protocol": "tcp",
                "label": "Mqtt local Port*",
                "default": 1884,
                "validation": [
                    "required",
                    "positive_integer"
                ]
            },
            {
                "name": "HOME_ASSISTANT_DISCOVERY_PREFIX",
                "type": "string",
                "label": "Discovery prefix*",
                "default": "homeassistant",
                "validation": [
                    "required",
                    "string"
                ]
            },
            {
                "name": "HOME_ASSISTANT_MQTT_USERNAME",
                "type": "string",
                "label": "Mqtt username",
                "default": "admin",
                "validation": [
                    "string"
                ]
            },
            {
                "name": "HOME_ASSISTANT_MQTT_PASSWORD",
                "type": "string",
                "label": "Mqtt password",
                "default": "admin",
                "validation": [
                    "string"
                ]
            },
            {
                "name": "DEBUG",
                "type": "string",
                "label": "Debug",
                "default": null
            }
        ]
    },
    "icon": "favicon.svg"
}